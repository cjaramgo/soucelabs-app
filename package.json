{
  "name": "saucedemo-playwright-challenge",
  "version": "1.0.0",
  "description": "Automated main flows tests for SauceDemo using Playwright with TypeScript for SolidProfessor challenge.",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:chromium": "npx playwright test --project=setup --project=chromium",
    "test:firefox": "npx playwright test --project=setup --project=firefox",
    "test:webkit": "npx playwright test --project=setup --project=webkit",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "report": "npx playwright show-report",
    "clean": "rm -rf playwright-report test-results src/tests/.auth/storage-state.json"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "automation",
    "typescript",
    "saucedemo",
    "SolidProfessor"
  ],
  "author": "Carlos Jaramillo",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.10",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
